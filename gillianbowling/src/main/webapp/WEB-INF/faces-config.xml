<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<!-- Bootstrap -->
	<navigation-rule>
		<from-view-id>/admin/bootstrap.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/admin/login.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/admin/bootstrap.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/admin/bootstrap.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>

	<!-- Categories -->
	<navigation-rule>
		<from-view-id>/admin/category-edit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/admin/category-edit.xhtml.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/admin/category-edit.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{categoryManager.save}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/admin/category-edit.xhtml.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>

	<!-- Login -->
	<navigation-rule>
		<from-view-id>/admin/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/admin/home.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/admin/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/admin/login.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/admin/photo-edit.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{photoManager.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/admin/photo-edit.xhtml</to-view-id>
			<redirect include-view-params="true" />
		</navigation-case>
	</navigation-rule>



	<application>
		<resource-bundle>
			<base-name>com.gillianbowling.locales.I18n</base-name>
			<var>I18n</var>
		</resource-bundle>
	</application>


</faces-config>